@model Movie

<div id="@("movieId"+Model.Id)" class="row">
    <div class="col-5">@Model.MovieName</div>
    <div class="col-5 mt-2">@Model.Genre </div>
    <div class="col-2 mt-2">@Model.IMDB </div>
    <div class="col-2 mt-2">@Model.Price </div>
    <div class="col"><button onclick="getSpaWithAjax('@Url.Action("SpaMovieDetails","AjaxMovies",new { id = Model.Id })','@("movieId" + Model.Id)')" class="btn btn-dark">Details</button></div>

</div>