@model CreateMovieViewModel  
@{
    ViewData["Title"] = "Movies - Add new Movie";
}
<h1> Add New Movie</h1>

@if (ViewBag.ExceptionMsg!=null)
{
<h4 class=" danger">@ViewBag.ExceptionMsg</h4>

}

<form asp-action="create" method="post">
    <label asp-for=" MovieName "> </label>
    <input asp-for="MovieName "  />

    <label asp-for="Genre"> </label>
    <input asp-for="Genre "  list="genresList" 
           />

    <label asp-for="IMDB"> </label>
    <input asp-for="IMDB " />

    <label asp-for="Price "></label>
    <input asp-for="Price " min="0" step="10" /><span>kr</span>

    <button type="submit"> Create Movie</button>


    <datalist id="genresList">
        @foreach (string genre in Model.GenreList )
        {
            <option value="@genre ">@genre </option>

        }
    </datalist>

</form>
